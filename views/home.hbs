<section class="home">
  <div class="swiper home-slider">
    <h1>New Promo Offers!</h1>
    <div class="swiper-wrapper">
      <!-- products  -->
      {{#each products}}
      <div class="swiper-slide slide">
        <div class="image">
          <img src="{{image}}" />
        </div>
        <div class="content">
          <h1>{{title}}</h1>
          {{!-- <p>{{price}}$</p> --}}
          {{#if promo}}
          <div class="promo-price-container">
            <p class="original-price"> {{price}}.00$</p>
            <p class="promo-price">{{promoPrice}}.00$</p>
          </div>
          {{/if}}
          <h3>{{type}}</h3>
          <h4>{{shortDescription}}</h4>
          <a class="btn" href="/details/{{_id}}">Shop Now!</a>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>

