<h1 class="most-favorited-title">Most Favorited</h1>
<div class="most-favorited-container">
  {{#each mostFavorited}}
  {{#if isFavorited}}
  <div class="favorited">
    <a href="/details/{{_id}}">
      <img src="{{image}}" alt="img" />
    </a>
    <h1>{{title}}</h1>
    <p>{{connectivity}}</p>
    <p>{{type}}</p>
    <p>{{color}}</p>
    <div class="price-logo">
      <p>{{price}}$</p>
      <a href="/products/{{type}}?page=1&productsPerPage=5&brand={{brand}}">
        <img src="{{brandLogo}}" />
      </a>
    </div>
  </div>
  {{/if}}
  {{/each}}
</div>