<h1 class="most-favorited-title">Most Favorited</h1>
<div class="most-favorited-container">
  {{#each mostFavorited}}
  {{#if isFavorited}}
  <div class="favorited">
    {{#if promo}}
    <div class="promo-message">promo</div>
    {{/if}}
    <a href="/details/{{_id}}">
      <img src="{{image}}" alt="img" />
    </a>
    <h1>{{title}}</h1>
    {{#each mainCharacteristics}}
    <p> <i class="fas fa-check"></i> {{char}} </p>
    {{/each}}
    <div class="price-logo">
      {{#if promo}}
      <div class="promo-price-container">
        <p class="original-price">{{price}}.00$</p>
        <p class="promo-price">{{promoPrice}}.00$</p>
      </div>
      {{else}}
      <p>{{price}}.00$</p>
      {{/if}}
      <a href="/products/{{type}}?page=1&productsPerPage=5&brand={{brand}}">
        <img src="{{brandLogo}}" />
      </a>
    </div>
  </div>
  {{/if}}
  {{/each}}
</div>