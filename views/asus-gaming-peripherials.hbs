<div class="header-picture">
    <img src="/static/images/asus-panel.jpg" alt="">
</div>

<p class="gaming-periphery-title">
    Choose your new gaming periphery from <span>Asus</span> and jump into the world of games!
</p>

<div class="gaming-periphery-side-bar">
    <a href="#mouses">Asus Mouses</a>
    <a href="#keyboards">Asus Keyboards</a>
    <a href="#headphones">Asus Headphones</a>
</div>

<section id="mouses">
    <h1 class="gaming-periphery-product-title">Asus Mouses <span>({{mousesLength}})</span></h1>
</section>
<div class="gaming-periphery-container">
    {{#if mouses}}
    {{#each mouses}}
    <div class="gaming-periphery-product">
        {{#if promo}}
        <div class="promo-message">promo</div>
        {{/if}}
        <a href="/details/{{_id}}">
            <img src="{{image}}" alt="">
        </a>
        <h1>{{title}}</h1>
        {{#each mainCharacteristics}}
        <p> <i class="fas fa-check"></i> {{char}}</p>
        {{/each}}
        <div class="price-logo">
            {{#if promo}}
            <div class="promo-price-container">
                <p class="original-price">{{price}}.00$</p>
                <p class="promo-price">{{promoPrice}}.00$</p>
            </div>
            {{else}}
            <p>{{price}}.00$</p>
            {{/if}}
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>No results found!</p>
    {{/if}}
</div>


