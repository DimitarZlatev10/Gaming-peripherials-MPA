<div class="container">
  <form class="login-form" action="/login" method="post">
    <h1>Sign In</h1>
    <input
      type="text"
      class="form-input"
      placeholder="Email..."
      name="email"
      value="{{email}}"
    />
    <input
      type="password"
      class="form-input"
      placeholder="Password..."
      name="password"
    />
    <div class="buttons">
      <button type="submit">Sign In</button>
      <a href="/register">Don't have an accout?</a>
    </div>
  </form>
</div>