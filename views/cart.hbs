<div class="profile-side-bar">
    <div class="profile-info">
        <img src="{{user.image}}" alt="">
        <h1>{{user.firstName}} {{user.lastName}}</h1>
        <a href="/logout"> <i class="fa fa-sign-out"></i> Logout</a>
    </div>
    <div class="tabs">
        <a href="#profile"> <i class="fas fa-home"></i> Profile </a>
        <a href="#orders"> <i class="fas fa-check"></i> Orders </a>
        <a class="tabs-background" href="/cart"><i class="fas fa-shopping-cart"></i> Cart {{#if totalCarted}}
            <span>{{totalCarted}}</span> {{/if}} </a>
        <a href="/favourites"><i class="fas fa-heart"></i> Favorites
            {{#if totalFavourites}} <span>{{totalFavourites}}</span> {{/if}} </a>
    </div>
</div>


<h1 class="profile-favourites-title">Cart</h1>
<div class="profile-favourites-container">
    {{#if cartItems}}
    {{#each cartItems}}
    <div class="favourited-item">
        <a href="/removeFromCart/{{_id}}"> <i class="fa fw-fw fa-times-circle"></i> </a>
        <img src="{{image}}" alt="">
        <h1> <a href="/details/{{_id}}">{{title}}</a> </h1>
        <p>{{price}}.00$</p>
    </div>
    {{/each}}
    <a class="order-button" href="#order">Order now!</a>
    {{else}}
    <p class="no-favorites">You have no products in your cart</p>
    {{/if}}
</div>